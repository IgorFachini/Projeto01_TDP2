@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <div class="col-md-3">
        @Html.Action("Listar", "Generos")
    </div>
    <div class="col-md-9">
        <div class="row" id="conteudo">
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(document).ready(configurarTelaPrincipal);

        function configurarTelaPrincipal() {

            $("a[data-action='ListContent']").on("click", listarConteudoPorGenero);

            listarConteudoPorGenero();

        }

        function listarConteudoPorGenero() {

            var generoId = 0;

            if ($(this).data("genero-id") != undefined) {

                generoId = $(this).data("genero-id");
            }

            $("#conteudo").load("@Url.Action("ListarPorGenero", "Home")", { id: generoId });
        }
    </script>
}